@model IEnumerable<ProyectoEcommerce.Models.Employee>
@{
    ViewData["Title"] = "Administrar empleados";
}
<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Agregar empleado</a>
</p>

@if (!(Model?.Any() ?? false))
{
    <div class="alert alert-info">No hay empleados registrados.</div>
}
else
{
    <table class="table table-striped align-middle">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Puesto</th>
                <th>Dirección</th>
                <th>Nacimiento</th>
                <th>Contratación</th>
                <th class="text-end">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.position</td>
                    <td class="text-truncate" style="max-width: 360px;">@item.direccion</td>
                    <td>@item.FechaNacimiento.ToString("yyyy-MM-dd")</td>
                    <td>@item.Contratacion.ToString("yyyy-MM-dd")</td>
                    <td class="text-end">
                        <a asp-action="Details" asp-route-id="@item.EmployeeId" class="btn btn-sm btn-outline-secondary">Ver</a>
                        <a asp-action="Edit" asp-route-id="@item.EmployeeId" class="btn btn-sm btn-outline-primary ms-1">Editar</a>
                        <a asp-action="Delete" asp-route-id="@item.EmployeeId" class="btn btn-sm btn-outline-danger ms-1">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
