@model ProyectoEcommerce.Models.Product

@{
    ViewData["Title"] = Model.Name;
    Layout = "_Layout";
    var now = DateTime.UtcNow;
    bool promoActive = Model.Promotion != null && Model.Promotion.IsActive && Model.Promotion.StartDate <= now && Model.Promotion.EndDate >= now && Model.Promotion.DiscountPercent > 0;
    var effectivePrice = Model.CalculateEffectivePrice(now);
}

<div class="container mt-4">
    <div class="row">
        <!-- Imagen del Producto -->
        <div class="col-md-6">
            <div class="product-image-container text-center">
                @{
                    var imagePath = string.IsNullOrEmpty(Model.ImageUrl)
                    ? "~/images/no-image.png"
                    : Model.ImageUrl;
                }
                <img src="@Url.Content(imagePath)"
                     class="img-fluid rounded shadow"
                     alt="@Model.Name"
                     style="max-height: 400px; object-fit: cover;"
                     onerror="this.src='@Url.Content("~/images/no-image.png")'" />
                @* Si hay promoción activa, mostrar badge sobre la imagen *@
                @if (promoActive)
                {
                    <div class="badge bg-danger position-absolute" style="top:20px; left:20px; z-index:20; font-weight:700; padding:0.4rem 0.6rem;">
                        @(Model.Promotion.BadgeText ?? (Model.Promotion.DiscountPercent > 0 ? $"{Model.Promotion.DiscountPercent}% OFF" : "Oferta"))
                    </div>
                }
            </div>
        </div>

        <!-- Info del Producto -->
        <div class="col-md-6">
            <div class="product-details">
                <nav aria-label="breadcrumb" class="mb-3">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/">Inicio</a></li>
                        <li class="breadcrumb-item"><a href="/Categories/Public">Categorías</a></li>
                        <li class="breadcrumb-item"><a href="/Products/Public?categoryId=@Model.CategoryId">@Model.Category?.Name</a></li>
                        <li class="breadcrumb-item active">@Model.Name</li>
                    </ol>
                </nav>

                <h1 class="product-title mb-3">@Model.Name</h1>

                @if (!string.IsNullOrEmpty(Model.Description))
                {
                    <p class="product-description text-muted mb-4">@Model.Description</p>
                }

                <!-- Precio -->
                <div class="product-price mb-4">
                    @if (promoActive && effectivePrice < Model.Price)
                    {
                        <div>
                            <span class="h5 text-muted" style="text-decoration: line-through;">
                                ₡@Model.Price.ToString("N0", System.Globalization.CultureInfo.GetCultureInfo("en-US"))
                            </span>
                            <br />
                            <span class="h2 text-primary fw-bold">
                                ₡@effectivePrice.ToString("N0", System.Globalization.CultureInfo.GetCultureInfo("en-US"))
                            </span>
                            <small class="text-success ms-2">Ahorras ₡@(Math.Round(Model.Price - effectivePrice, 0).ToString("N0", System.Globalization.CultureInfo.GetCultureInfo("en-US"))) (@Model.Promotion.DiscountPercent %)</small>
                        </div>
                    }
                    else
                    {
                        <span class="h2 text-primary fw-bold">
                            ₡@Model.Price.ToString("N0", System.Globalization.CultureInfo.GetCultureInfo("en-US"))
                        </span>
                    }
                </div>

                <!-- Estado del Stock -->
                <div class="stock-info mb-4">
                    @if (Model.Stock > 0)
                    {
                        <span class="badge bg-success fs-6">
                            <i class="fas fa-check-circle"></i>
                            @(Model.Stock < 5 ? "Últimas unidades" : "En stock")
                            (@Model.Stock unidades)
                        </span>
                    }
                    else
                    {
                        <span class="badge bg-danger fs-6">
                            <i class="fas fa-times-circle"></i> Agotado
                        </span>
                    }
                </div>

                <!-- Acciones -->
                <div class="product-actions mb-4">
                    @if (Model.Available && Model.Stock > 0)
                    {
                        <div class="d-grid gap-2 d-md-flex">
                            <form asp-controller="ShoppingCarts" asp-action="AddToCart" method="post"
                                  class="d-flex align-items-center gap-2 p-0 m-0 add-to-cart-form">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="productId" value="@Model.Id" />
                                <input type="hidden" name="returnUrl" value="@Url.Action("DetailsPublic", "Products", new { id = Model.Id })" />

                                <div class="input-group" style="width:130px;">
                                    <input type="number"
                                           name="quantity"
                                           class="form-control"
                                           value="1"
                                           min="1"
                                           max="@Model.Stock"
                                           aria-label="Cantidad" />
                                </div>

                                <button type="submit" class="btn btn-primary btn-lg flex-fill add-to-cart-btn">
                                    <span class="button-text">
                                        <i class="fas fa-cart-plus"></i> Agregar al Carrito
                                    </span>
                                    <span class="spinner-border spinner-border-sm d-none" role="status">
                                        <span class="visually-hidden">Cargando...</span>
                                    </span>
                                </button>
                            </form>

                            <button class="btn btn-outline-secondary btn-lg favorite-btn" data-product-id="@Model.Id" title="Agregar a favoritos">
                                <i class="fas fa-heart"></i> Favorito
                            </button>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning text-center" role="alert">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            <strong>Producto no disponible</strong>
                            <br>
                            <small>Actualmente no tenemos stock de este producto</small>
                        </div>
                    }
                </div>



                <div class="product-meta">
                    <div class="row small text-muted">
                        <div class="col-6">
                            <i class="fas fa-tag"></i> Categoría: @Model.Category?.Name
                        </div>
                        <div class="col-6">
                            <i class="fas fa-shipping-fast"></i> Envío gratis
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Productos Relacionados -->
    <div class="row mt-5">
        <div class="col-12">
            <h3 class="mb-4">Productos Relacionados</h3>
            <div id="relatedProducts"
                 data-product-id="@Model.Id"
                 data-category-id="@Model.CategoryId">
                <div class="text-center text-muted">
                    <i class="fas fa-spinner fa-spin"></i> Cargando productos relacionados...
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/cart.js" asp-append-version="true"></script>
    <script src="~/js/productDetailsPublic.js" asp-append-version="true"></script>
}