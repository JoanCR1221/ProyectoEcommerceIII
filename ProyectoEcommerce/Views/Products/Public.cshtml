@model IEnumerable<ProyectoEcommerce.Models.Product>
@using Microsoft.AspNetCore.Mvc.Rendering
@{
    ViewData["Title"] = "Catálogo";
    var categories = ViewBag.Categories as List<SelectListItem>;

   
    var q = Context.Request.Query["q"].ToString();
    var selectedCat = Context.Request.Query["categoryId"].ToString();
}

<h1 class="mb-3">@ViewData["Title"]</h1>

<form method="get" class="row g-2 mb-4">
    <div class="col-12 col-sm-6">
        <input name="q" class="form-control" placeholder="Buscar productos..." value="@q" />
    </div>
    <div class="col-12 col-sm-4">
        <select name="categoryId" class="form-select">
            <option value="">Todas las categorías</option>
            @if (categories != null)
            {
                foreach (var c in categories)
                {
                    <option value="@c.Value" selected="@(selectedCat == c.Value ? "selected" : null)">@c.Text</option>
                }
            }
        </select>
    </div>
    <div class="col-12 col-sm-2">
        <button class="btn btn-primary w-100">Filtrar</button>
    </div>
</form>

@if (!(Model?.Any() ?? false))
{
    <p class="text-muted">No hay productos para mostrar.</p>
}
else
{
    <div class="row g-3">
        @foreach (var p in Model)
        {
            <div class="col-12 col-sm-6 col-lg-3">
                <div class="card h-100">
                    <img src="@(string.IsNullOrWhiteSpace(p.ImageUrl) ? Url.Content("~/images/no-image.png") : p.ImageUrl)" class="card-img-top" alt="@p.Name" />
                    <div class="card-body d-flex flex-column">
                        <h6 class="card-title mb-1">@p.Name</h6>
                        <small class="text-muted mb-2">@p.Category?.Name</small>
                        <div class="mt-auto">
                            <div class="fw-semibold mb-2">₡@p.Price</div>
                            <a asp-action="Details" asp-route-id="@p.Id" class="btn btn-sm btn-outline-secondary">Ver</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
