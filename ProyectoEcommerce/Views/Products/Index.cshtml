@model IEnumerable<ProyectoEcommerce.Models.Product>
@{
    ViewData["Title"] = "Administrar productos";
}

<h1>@ViewData["Title"]</h1>


<!-- PARA MOSTRAR MENSAJE DE ERROR CUANDO SE QUIERA ELIMINAR UN PRODUCTO QUE SE ENCUENTRE EN UN ShoppingCartItem o BuyItems-->
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
    </div>
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
    </div>
}


<!-- FILTRO POR CATEGORÍA -->
@if (ViewBag.CategoryId != null)
{
    <div class="alert alert-info d-flex justify-content-between align-items-center">
        <div>
            <i class="fas fa-filter"></i>
            Mostrando productos de la categoría: <strong>@ViewBag.CategoryName</strong>
        </div>
        <a href="@Url.Action("Index")" class="btn btn-sm btn-outline-secondary">
            <i class="fas fa-times"></i> Ver todos los productos
        </a>
    </div>
}

@if (User.IsInRole("Admin"))
{
    <p>
        <a asp-action="Create" class="btn btn-primary">Crear nuevo producto</a>
    </p>
}

<table class="table table-striped align-middle">
  
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Descripción</th>
            <th>Precio</th>
            <th>Disponible</th>
            <th>Imagen</th>
            <th>Stock</th>
            <th>Categoría</th>
            <th class="text-end">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model ?? Enumerable.Empty<ProyectoEcommerce.Models.Product>())
        {
            <tr>
                <td>@item.Name</td>
                <td class="text-truncate" style="max-width: 320px;">@item.Description</td>
                <td>@item.Price</td>
                <td>@item.Available</td>
                <td class="text-truncate" style="max-width: 220px;">@item.ImageUrl</td>
                <td>@item.Stock</td>
                <td>@item.Category?.Name</td>
                <td class="text-end">
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Ver</a>
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary ms-1">Editar</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger ms-1">Eliminar</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>