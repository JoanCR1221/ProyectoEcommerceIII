@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav ms-auto">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Administrar cuenta">
                Hola, @User.Identity?.Name
            </a>
        </li>
        <li class="nav-item">
            <form class="d-inline" method="post"
                  asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="~/">
                <button type="submit" class="btn nav-link">Salir</button>
            </form>
        </li>
    }
    
</ul>



