@model ProyectoEcommerce.Models.UserRoleViewModel
@{
    ViewData["Title"] = "Detalles del Usuario";
}

<div class="container py-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Usuarios</a></li>
            <li class="breadcrumb-item active">Detalles</li>
        </ol>
    </nav>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-person-circle"></i> Detalles del Usuario
                    </h4>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">
                            <i class="bi bi-key"></i> ID de Usuario
                        </dt>
                        <dd class="col-sm-8">
                            <code>@Model.UserId</code>
                        </dd>

                        <dt class="col-sm-4">
                            <i class="bi bi-envelope"></i> Correo Electrónico
                        </dt>
                        <dd class="col-sm-8">
                            @Model.Email
                        </dd>

                        <dt class="col-sm-4">
                            <i class="bi bi-person"></i> Nombre de Usuario
                        </dt>
                        <dd class="col-sm-8">
                            @Model.UserName
                        </dd>

                        <dt class="col-sm-4">
                            <i class="bi bi-check-circle"></i> Email Confirmado
                        </dt>
                        <dd class="col-sm-8">
                            @if (Model.EmailConfirmed)
                            {
                                <span class="badge bg-success">
                                    <i class="bi bi-check-circle-fill"></i> Sí
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-warning text-dark">
                                    <i class="bi bi-exclamation-circle-fill"></i> No
                                </span>
                            }
                        </dd>

                        <dt class="col-sm-4">
                            <i class="bi bi-shield-lock"></i> Roles Asignados
                        </dt>
                        <dd class="col-sm-8">
                            @if (Model.Roles.Any())
                            {
                                <div class="d-flex flex-wrap gap-2">
                                    @foreach (var role in Model.Roles)
                                    {
                                        <span class="badge @(role == "Admin" ? "bg-danger" : role == "Empleado" ? "bg-info" : "bg-secondary")">
                                            @switch (role)
                                            {
                                                case "Admin":
                                                    <i class="bi bi-shield-fill-check"></i>
                                                    break;
                                                case "Empleado":
                                                    <i class="bi bi-person-badge"></i>
                                                    break;
                                                case "Cliente":
                                                    <i class="bi bi-person"></i>
                                                    break;
                                            }
                                            @role
                                        </span>
                                    }
                                </div>
                            }
                            else
                            {
                                <span class="text-muted">Sin roles asignados</span>
                            }
                        </dd>
                    </dl>

                    <hr />

                    <div class="d-flex gap-2 justify-content-end">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Volver a la lista
                        </a>
                        <a asp-action="ManageRoles" asp-route-id="@Model.UserId" class="btn btn-primary">
                            <i class="bi bi-shield-lock"></i> Gestionar Roles
                        </a>
                    </div>
                </div>
            </div>

            <!-- Acciones adicionales -->
            <div class="card mt-3 shadow-sm">
                <div class="card-header bg-light">
                    <h6 class="mb-0"><i class="bi bi-gear"></i> Acciones Administrativas</h6>
                </div>
                <div class="card-body">
                    <div class="d-flex gap-2 flex-wrap">
                        <form asp-action="ToggleEmailConfirmation" asp-route-id="@Model.UserId" method="post">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-sm btn-outline-info">
                                <i class="bi bi-envelope-check"></i>
                                @(Model.EmailConfirmed ? "Revocar" : "Confirmar") Email
                            </button>
                        </form>

                        <button type="button"
                                class="btn btn-sm btn-outline-danger"
                                data-bs-toggle="modal"
                                data-bs-target="#deleteModal">
                            <i class="bi bi-trash"></i> Eliminar Usuario
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal de confirmación de eliminación -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">Confirmar Eliminación</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>¿Está seguro que desea eliminar al usuario <strong>@Model.Email</strong>?</p>
                <p class="text-danger mb-0">
                    <i class="bi bi-exclamation-triangle"></i> Esta acción no se puede deshacer.
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <form asp-action="Delete" asp-route-id="@Model.UserId" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Eliminar
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
}