@model ProyectoEcommerce.Models.Category

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Category</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>

        <!-- total de productos -->
        <dt class="col-sm-2">
            Modelos de Productos
        </dt>
        <dd class="col-sm-10">
            @(Model.Products?.Count ?? 0)
        </dd>
    </dl>
</div>

<!-- LINK DIRECTO A PRODUCTOS DE ESA CATEGORÍA -->
<div class="mb-3">
    <a asp-controller="Products" asp-action="Index" asp-route-categoryId="@Model.CategoryId"
       class="btn btn-info">
        <i class="fas fa-boxes"></i> Ver Productos de esta Categoría
    </a>
</div>

<div>
    
    <a asp-action="Index">Back to List</a>
</div>