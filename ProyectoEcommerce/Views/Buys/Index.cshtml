@model IEnumerable<ProyectoEcommerce.Models.Buy>
@{
    ViewData["Title"] = "Administrar compras";
}

<h1>@ViewData["Title"]</h1>

@if (User.IsInRole("Admin"))
{
    <p>
        <a asp-action="Create" class="btn btn-primary">Crear nueva compra</a>
    </p>
}

<table class="table table-striped align-middle">
    <thead>
        <tr>
            <th>Fecha</th>
            <th class="text-end">Subtotal</th>
            <th class="text-end">IVA</th>
            <th class="text-end">Total</th>
            <th>Cliente</th>
            <th>Empleado</th>
            <th class="text-end">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model ?? Enumerable.Empty<ProyectoEcommerce.Models.Buy>())
        {
            <tr>
                <td>@item.Fecha</td>
                <td class="text-end">₡@item.Subtotal</td>
                <td class="text-end">₡@item.IVA</td>
                <td class="text-end fw-semibold">₡@item.Total</td>
                <td>@item.Customer?.Email</td>
                <td>@item.Employee?.Name</td>
                <td class="text-end">
                    <a asp-action="Details" asp-route-id="@item.BuyId" class="btn btn-sm btn-outline-secondary">Ver</a>
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="Edit" asp-route-id="@item.BuyId" class="btn btn-sm btn-outline-primary ms-1">Editar</a>
                        <a asp-action="Delete" asp-route-id="@item.BuyId" class="btn btn-sm btn-outline-danger ms-1">Eliminar</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
