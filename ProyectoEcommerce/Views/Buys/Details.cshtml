@model ProyectoEcommerce.Models.Buy

@{
    ViewData["Title"] = "Details";

    // Crear formato personalizado con coma para miles
    var customFormat = new System.Globalization.NumberFormatInfo
    {
        NumberDecimalDigits = 0,
        NumberGroupSeparator = ",",
        NumberDecimalSeparator = "."
    };
}

<h1>Details</h1>

<div>
    <h4>Buy</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Fecha)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Fecha)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Subtotal)
        </dt>
        <dd class="col-sm-10">
            ₡@Model.Subtotal.ToString("N0", customFormat)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IVA)
        </dt>
        <dd class="col-sm-10">
            ₡@Model.IVA.ToString("N0", customFormat)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Total)
        </dt>
        <dd class="col-sm-10">
            ₡@Model.Total.ToString("N0", customFormat)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Customer)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Customer.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Employee)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.Name)
        </dd>
    </dl>
</div>
<div>
    <a href="javascript:history.back()" class="btn btn-secondary">Back to List</a>
</div>