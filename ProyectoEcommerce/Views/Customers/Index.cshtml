@model IEnumerable<ProyectoEcommerce.Models.Customer>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name_full)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefono)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Direccion)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <!-- SOLO UN BUCLE -->
        @foreach (var item in Model ?? Enumerable.Empty<ProyectoEcommerce.Models.Customer>())
        {
            <tr>
                <td>@item.Name_full</td>
                <td>@item.Email</td>
                <td>@item.Telefono</td>
                <td class="text-truncate" style="max-width: 360px;">@item.Direccion</td>
                <td class="text-end">
                    <a asp-action="Details" asp-route-id="@item.CustomerId" class="btn btn-sm btn-outline-secondary">Ver</a>
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="Edit" asp-route-id="@item.CustomerId" class="btn btn-sm btn-outline-primary ms-1">Editar</a>
                        <a asp-action="Delete" asp-route-id="@item.CustomerId" class="btn btn-sm btn-outline-danger ms-1">Eliminar</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>