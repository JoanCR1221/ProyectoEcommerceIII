@model ProyectoEcommerce.Models.ShoppingCart
@using System.Linq
@using System.Globalization

@{
    //  formato personalizado con coma para miles
    var customFormat = new NumberFormatInfo
    {
        NumberDecimalDigits = 0,
        NumberGroupSeparator = ",",
        NumberDecimalSeparator = "."
    };

    var subtotal = Model?.Items.Sum(i => i.Quantity * (i.Product?.Price ?? 0m)) ?? 0m;
    var ivaRate = 0.13m;
    var iva = Math.Round(subtotal * ivaRate, 2);
    var total = subtotal + iva;
}

<h2>Mi carrito</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}
@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

@if (Model == null || !Model.Items.Any())
{
    <div class="alert alert-info">Tu carrito está vacío.</div>
    <a asp-controller="/" asp-action="Index" class="btn btn-primary">Seguir comprando</a>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Imagen</th>
                <th>Producto</th>
                <th>Precio unidad</th>
                <th>Cantidad</th>
                <th>Subtotal</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>
                        @if (!string.IsNullOrEmpty(item.Product?.ImageUrl))
                        {
                            <!-- ruta de la imagen -->
                            <img src="@Url.Content(item.Product.ImageUrl)"
                                 alt="@item.Product?.Name"
                                 style="height:60px; width:60px; object-fit:cover;"
                                 onerror="this.src='/images/no-image.png'" />
                        }
                        else
                        {
                            <!-- Imagen por defecto -->
                            <img src="/images/no-image.png"
                                 alt="Sin imagen"
                                 style="height:60px; width:60px; object-fit:cover;" />
                        }
                    </td>
                    <td>
                        <a asp-controller="Products" asp-action="Details" asp-route-id="@item.ProductId" class="fw-semibold">
                            @item.Product?.Name
                        </a>

                        @if (item.Product?.Promotion != null
                                        && item.Product.Promotion.IsActive
                                        && item.Product.Promotion.StartDate <= DateTime.UtcNow
                                        && item.Product.Promotion.EndDate >= DateTime.UtcNow)
                        {
                            <div class="badge bg-danger mt-1">
                                @item.Product.Promotion.BadgeText ??
                                $"{item.Product.Promotion.DiscountPercent}% OFF"
                            </div>
                        }
                    </td>

                    <td>₡@((item.Product?.Price ?? 0).ToString("N0", customFormat))</td>
                    <td>
                        <form asp-controller="ShoppingCarts" asp-action="UpdateQuantity" method="post" class="d-flex align-items-center">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="cartId" value="@Model.ShoppingCartId" />
                            <input type="hidden" name="productId" value="@item.ProductId" />
                            <input type="number" name="quantity" value="@item.Quantity" min="1" max="999" class="form-control me-2" style="width:90px;" />
                            <button type="submit" class="btn btn-sm btn-outline-primary">Actualizar</button>
                        </form>
                    </td>
                    <td>₡@((item.Quantity * (item.Product?.Price ?? 0)).ToString("N0", customFormat))</td>
                    <td>
                        <form asp-controller="ShoppingCarts" asp-action="RemoveItem" method="post" onsubmit="return confirm('¿Eliminar este producto del carrito?');">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="cartId" value="@Model.ShoppingCartId" />
                            <input type="hidden" name="productId" value="@item.ProductId" />
                            <button type="submit" class="btn btn-sm btn-danger">Eliminar</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="row">
        <div class="col-md-6">
            <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Seguir comprando</a>
        </div>
        <div class="col-md-6 text-end">
            <dl class="row justify-content-end">
                <dt class="col-4">Subtotal:</dt>
                <dd class="col-4 text-end">₡@subtotal.ToString("N0", customFormat)</dd>

                <dt class="col-4">IVA (@(ivaRate * 100)%)</dt>
                <dd class="col-4 text-end">₡@iva.ToString("N0", customFormat)</dd>

                <dt class="col-4 h5">Total:</dt>
                <dd class="col-4 h5 text-end">₡@total.ToString("N0", customFormat)</dd>
            </dl>

            <form id="payForm" asp-controller="ShoppingCarts" asp-action="Pay" method="post" class="d-inline">
                @Html.AntiForgeryToken()
                <button type="button" id="btnPay" class="btn btn-success btn-lg">Pagar</button>
            </form>
        </div>
    </div>
}

<!-- Modal de confirmación antes de pagar -->
<div class="modal fade" id="confirmPayModal" tabindex="-1" aria-labelledby="confirmPayLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="confirmPayLabel">Confirmar compra</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
      </div>
      <div class="modal-body">
        <p>Vas a realizar el pago por el siguiente monto:</p>
        <ul class="list-unstyled">
            <li>Subtotal: <strong id="confirmSubtotal">₡@subtotal.ToString("N0", customFormat)</strong></li>
            <li>IVA (@(ivaRate * 100)%): <strong id="confirmIva">₡@iva.ToString("N0", customFormat)</strong></li>
            <li>Total: <strong id="confirmTotal">₡@total.ToString("N0", customFormat)</strong></li>
        </ul>
        <p class="text-muted small mb-0">¿Deseas continuar y procesar el pago?</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
        <button type="button" id="confirmPayBtn" class="btn btn-success">Confirmar y pagar</button>
      </div>
    </div>
  </div>
</div>

@section Scripts {
    <script>
        (function () {
            const btnPay = document.getElementById('btnPay');
            const confirmModalEl = document.getElementById('confirmPayModal');
            const confirmModal = new bootstrap.Modal(confirmModalEl);
            const confirmPayBtn = document.getElementById('confirmPayBtn');
            const payForm = document.getElementById('payForm');

            btnPay?.addEventListener('click', function () {
                confirmModal.show();
            });

            confirmPayBtn?.addEventListener('click', function () {
                // Feedback visual: deshabilitar botón y mostrar spinner
                confirmPayBtn.disabled = true;
                confirmPayBtn.innerHTML = '<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> Procesando...';
                // enviar formulario
                payForm.submit();
            });

            // Restaurar estado del botón si se cierra modal (por si el usuario vuelve)
            confirmModalEl.addEventListener('hidden.bs.modal', function () {
                confirmPayBtn.disabled = false;
                confirmPayBtn.innerHTML = 'Confirmar y pagar';
            });
        })();
    </script>
}

   
