@*
 Layout exclusivo para el área Admin
 Usa Bootstrap desde CDN por simplicidad.
 Puedes mover estilos a wwwroot/css/admin.css si prefieres.
*@
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Admin</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
</head>
<body class="bg-light">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand fw-semibold" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Admin</a>
            <div class="d-flex">
                <a class="btn btn-outline-light btn-sm" asp-area="" asp-controller="Home" asp-action="Index">Ir al sitio</a>
            </div>
        </div>
    </nav>

    <div class="container-fluid">
        <div class="row">
            <aside class="col-12 col-md-3 col-lg-2 p-3 bg-white border-end">
                @await Html.PartialAsync("_Sidebar")
            </aside>
            <main class="col-12 col-md-9 col-lg-10 p-4">
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/admin.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
